<div class="banner-static static-middle-sneaker1">
  {% if section.blocks.size > 0 %}
  {% for block in section.blocks limit:1 %}
  {% if block.settings.image != blank %}
  <div class="image">
    {% if block.settings.link != blank %} 
    <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
      {% endif %}
      {% if block.settings.image != blank %}
      <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ block.settings.image | img_url: 'master' }}" alt=""/>
      {% endif %}
      <style type="text/css">
        .static-middle-sneaker1 .text.t{{block.id}} {
          {% case block.settings.ad_text_position %}
          {% when 'left' %}
          left: 5% !important;
          right: auto !important;
          {% when 'right' %}
          left: auto !important;
          right: 5% !important;
          {% when 'center' %}
          left: 5% !important;
          right: 5% !important;
          {% else %}
          {% endcase %}
        }
      </style>
      <span class="text t{{block.id}} {{ block.settings.ad_align }}" style="text-align:{{ block.settings.ad_align }}">
        {% if block.settings.heading != blank %} 
        <span class="text1" style="color:{{ block.settings.heading_color }}">{{ block.settings.heading }}</span>
        {% endif %}
        {% if block.settings.sub_heading != blank %} 
        <span class="text2" style="color:{{ block.settings.sub_heading_color }}">{{ block.settings.sub_heading }}</span>
        {% endif %}
        {% if block.settings.description != blank %} 
        <span class="text3" style="color:{{ block.settings.description_color }}">{{ block.settings.description }}</span>
        {% endif %}
        {% if block.settings.link_text != blank %} 
        <span class="link">{{ block.settings.link_text }}</span>
        {% endif %}
      </span>
      {% if block.settings.link != blank %} 
    </a>
    {% endif %}
  </div>
  {% endif %}
  {% endfor %}
  {% endif %}
</div>
{% comment %}
<div class="banner-static static-bottom-autima2">
  {% if section.blocks.size > 0 %}
  {% for block in section.blocks limit:1 %}
  <div class="image" {% if block.settings.image == blank %}style="width:100%"{%endif%}>
    {% if block.settings.link != blank %}          
    <a href="{{ block.settings.link }}" {{ block.shopify_attributes }} {% if block.settings.image == blank %}style="width:100%"{%endif%}>
      {% endif %}
      {% if block.settings.image != blank %}
      <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ block.settings.image | img_url: 'master' }}" alt=""/>
      {% else %}
      {% capture current %}{% cycle 1 %}{% endcapture %}
      {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
      {% if block.settings.link != blank %}          
    </a>
    {% endif %}
    <div class="text t{{block.id}}" style="text-align:{{ block.settings.ad_align }}">
      <style type="text/css">
        .static-bottom-autima2 .text.t{{block.id}} {
          {% case block.settings.ad_text_position %}
          {% when 'center' %}
          left: 30%;
          right: auto;
          {% when 'right' %}
          left: auto;
          right: 0;
          {% else %}
          {% endcase %}
        }
      </style>
      {% if block.settings.heading != blank %} 
      <h4 style="color:{{ block.settings.heading_color }};font-size:{{ block.settings.heading_size }};">{{ block.settings.heading }}</h4>
      {% endif %}
      {% if block.settings.sub_heading != blank %} 
      <h3 style="color:{{ block.settings.sub_heading_color }};font-size:{{ block.settings.sub_heading_size }};">{{ block.settings.sub_heading }}</h3>
      {% endif %}
      {% if block.settings.description != blank %} 
      <p style="color:{{ block.settings.description_color }}">{{ block.settings.description }}</p>
      {% endif %}
      {% if block.settings.link != blank %} 
      <a class="" href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
        {{ block.settings.link_text }}
      </a>
      {% endif %}
    </div>
  </div>
  {% endfor %}
  {% endif %}
</div>
{% endcomment %}