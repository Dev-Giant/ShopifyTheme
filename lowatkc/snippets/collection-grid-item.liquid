{% include 'product-grid-variables', ratio:'1:1' %}

{% unless collection_item_width %}
{% assign collection_item_width = 'text-center' %}
{% endunless %}
<div class="{{ collection_item_width }} ">
  {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
  <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">
    {% if collection.image %}
    {% include 'product-grid-image',image:collection.image %}
    {% comment %}{{ collection.image.src | img_url: '360x360' | img_tag: collection_title }}{% endcomment %}
    {% else %}
    {% include 'product-grid-image',image:collection.products.first.featured_image %}
    {% comment %}{{ collection.products.first.featured_image | img_url: '360x360' | img_tag: collection_title }}{% endcomment %}
    {% endif %}
    <h4 class="text-center">{{ collection.title }}<small> ({{ 'collections.general.items_with_count' | t: count: collection.all_products_count }})</small>
    </h4>
  </a>
</div>