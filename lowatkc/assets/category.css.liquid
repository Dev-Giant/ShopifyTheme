{% assign color_skin = settings.color_skin %}
{% assign color_body_2 = settings.color_body_2 %}

/* Swatches Options */
.ul-swatches-colors {list-style: none;overflow: hidden;padding: 0;}
.ul-swatches-colors li {float: left;border: 1px solid {{ color_body_2 }};display: inline-block;position: relative;margin-right: 2px;padding: 2px;line-height:10px}
.ul-swatches-colors .swatches-options:hover {border: 1px solid {{ color_skin }};}
.ul-swatches-colors .swatches-options.checked {border: 1px solid {{ color_skin }};}
.ul-swatches-colors .swatches-options a {width: 10px; height: 10px; float: left;display: inline-block;vertical-align: middle;border-radius: 100% !important;}
