<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %} {% if section.settings.layout == 'feature-service2' or section.settings.layout == 'feature-service4' %} ma2{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.layout %}
          </div>
        </div>
      </div>
    </div> 
  </div>
</div>
{% schema %}
{
  "name": "Service Boxes section",
  "max_blocks": 5,
  "settings": [
	{
        "type": "select",
        "id": "layout",
        "label": "Select layout design",
        "options": [
            {
              "value": "feature-service1",
              "label": "Design 1 (5 boxes)"
            },
			{
              "value": "feature-service2",
              "label": "Design 2 (5 boxes)- For inserting above footer"
            },
			{
              "value": "feature-service3",
              "label": "Design 3 (3 boxes)"
            },
			{
              "value": "feature-service4",
              "label": "Design 4 (3 boxes)- For inserting above footer"
            }
          ]	
    },
	{
        "type": "checkbox",
        "id": "fullwidth",
        "label": "Set Div fullwidth?",
        "default": true
    }
  ],
  "blocks": [
    {
      "type": "box",
      "name": "Feature box",
      "settings": [
		{
          "type": "text",
          "id": "feature_service_icon",
          "label": "Image",
		  "default": "fas fa-plane",
		  "info": "Get icon codes from [this link](https:\/\/fontawesome.com\/v4.7.0\/cheatsheet\/)"
		},
        {
          "type": "text",
          "id": "feature_service_title",
          "label": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "feature_service_description",
          "label": "Feature description"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Service box section",
    "category": "Feature Sections",
    "blocks": [
      {
        "type": "box"
      },
      {
        "type": "box"
      }
    ]
  }]
}
{% endschema %}
