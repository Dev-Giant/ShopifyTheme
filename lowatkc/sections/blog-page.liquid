 <div class="news-main news-main-in">
      <div class="container">
        <div class="form-box">
             {% for block in section.blocks %}
          {% if block.type == 'search' %}
          <!--Blog search start-->
         
         <form action="/search" method="get" role="search" name ="blog-search" id="blog-search">
                <input type="hidden" name="type" value="article">
               
                <div class="input-group">
                
                   <input type="text" name="q" id="text-search" value="{{ search.terms | escape }}" placeholder="{{ 'layout.search_bar.placeholder_blog' | t }}" class="form-control input-lg" aria-label="{{ 'layout.search_bar.placeholder_blog' | t }}" />
               
                  <span class="input-group-btn">
                  <button type="submit" form="blog-search" class="btn btn-default btn-lg"></button>
                </span>
                </div>
                
               
              </form>
           
        
           {% endif %}
            {% endfor %}
          <form>
            
            <select>
              <option>Select Category</option>
            </select>
          </form>
        </div>
        <ul class="row blog-box">  
           {% for article in blog.articles %}
           <li class="col-md-3">
            <div class="news-box">
              {% if article.image %}
              <div class="img-box">
                <img {% if settings.lazyloading_enable %} class="lazyload img-fluid" data-{% endif %}src="{{ article | img_url: blog_image_size }}" alt="{{ article.title }}">
                                    
              </div>
              {% else %}
              <div class="img-box">
                <img src="{{ 'news-img.png' | asset_url }}" class="img-fluid">                      
              </div>
              {% endif %}
             
              <div class="cont-box">
                <h3>{{ article.title }}</h3>
                <a href="{{ article.url }}">Read More</a>
              </div>                                       
            </div>
          </li>
 		{% endfor %}
         
         
                     
        </ul>
