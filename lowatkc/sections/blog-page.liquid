{% schema %}
{
   "name": "Blog Page",
   "settings": [
      {
         "type":"select",
         "id":"blog_layout",
         "label":"Layout",
         "options":[
            {
               "value":"default",
               "label":"default"
            },
			{
               "value":"full",
               "label":"Full Image / Grid 1"
            },
            {
               "value":"grid2",
               "label":"Grid 2"
            },
            {
               "value":"grid3",
               "label":"Grid 3"
            },
			{
               "value":"cross",
               "label":"Cross Image"
            }
         ],
         "default":"default"
      },
	  {
        "type": "text",
        "id": "no_articles",
        "label": "No of articles to show (per page)",
        "default": "5"
      },
      {
        "type": "checkbox",
        "id": "show_summary",
        "label": "Show Summary in list view",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_summary_stripped",
        "label": "Strip Summary",
        "default": true,
        "info": "Strips html tags to show text without format"
      },
      {
        "type": "text",
        "id": "blog_summary_words",
        "label": "Words count on summary area",
        "default": "30"
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Text Alignment",
        "options": [
          {
          "value": "left",
          "label": "left"
          },
          {
          "value": "center",
          "label": "center"
          },
          {
          "value": "right",
          "label": "right"
          },
          {
          "value": "justify",
          "label": "justify"
          }
         ],
        "default": "left"
      },
	  {
         "type":"select",
         "id":"show_sidebar",
         "label":"Sidebar position",
         "options":[
            {
               "value":"no",
               "label":"No Sidebar"
            },
            {
               "value":"left",
               "label":"Left Sidebar"
            },
            {
               "value":"right",
               "label":"Right Sidebar"
            }
         ],
         "default":"no"
      }
    ],
   "blocks": [
      {
        "type": "search",
        "name": "Sidebar Search",
        "settings": [
          {
             "type":"checkbox",
             "id":"show_sidebar_search_box",
             "label":"Show Sidebar Search Box",
             "default":true
          }
        ]
      },
      {
        "type": "links",
        "name": "Sidebar links menu",
        "settings": [
          {
             "type": "link_list",
             "id": "sidebar_menu",
             "label": "Sidebar links menu"
          }
        ]
      },
      {
        "type": "recent-articles",
        "name": "Sidebar Recent Articles",
        "settings": [
          {
             "type":"checkbox",
             "id":"show_article_heading",
             "label":"Show Heading",
             "default":true
          },
		  {
             "type":"checkbox",
             "id":"article_publish_info",
             "label":"Show Publish Info",
             "default":false
          }
        ]
      },
      {
        "type": "tags",
        "name": "Sidebar Tags",
        "settings": [
          {
             "type":"checkbox",
             "id":"show_sidebar_tags_title",
             "label":"Show Title",
             "default":true
          }
        ]
      },
      {
        "type": "image",
        "name": "Sidebar Image",
        "settings": [
          {
             "type":"image_picker",
             "id":"side_image",
             "label":"Side image"
          },
          {
             "type":"url",
             "id":"side_link",
             "label":"Side image link"
          }
        ]
      }
	],
   "presets": []
}
{% endschema %}