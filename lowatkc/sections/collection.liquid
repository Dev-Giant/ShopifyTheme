<div class="main-row {% if section.settings.fullwidth == true %}fluid-width{% endif  %} {% if section.settings.collection_layout == 'feature-carousal2' %} bestseller-full{% endif  %}" {% if section.settings.collection_layout == 'feature-carousal2' %} {% if section.settings.image != blank %}style="background-image: url('{{ section.settings.image | img_url: 'master' }}');" {% endif %}{% endif %} data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.collection_layout %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
"name": "Featured collection",
"class": "index-section",
  "settings": [
    {
      "type": "select",
      "id": "collection_layout",
      "label": "Select section layout",
      "options": [
        {
        "value": "feature-carousal",
        "label": "Design 1"
        },
		{
        "value": "feature-carousal2",
        "label": "Design 2"
        }
      ]
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FEATURED PRODUCTS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Browse the collection of our best selling and trending products"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "listing_rows",
      "label": "No of product rows",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1
    },
    {
      "type": "range",
      "id": "no_of_products",
      "label": "No of products in a row",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "products_tab_count",
      "label": "No of products to show",
      "min": 1,
      "max": 30,
      "step": 1,
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Set Div fullwidth?",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "product_grid_img_carousel",
      "label": "Slide All images in product grid?",
      "default": false,
      "info": "Used for Product grid carousel enable\/disable"
    }
  ],
  "presets": [
    {
    "name": "Featured collection",
    "category": "Collection"
    }
  ]
}
{% endschema %}
{% if settings.grid_auto_resize != 'false' -%}
<script type="text/javascript">
  $(document).ready(function() {
    mass.resizeGrid('#product_module{{section.id}}',{{section.settings.listing_rows}});
  });
  $(window).resize(function() {
    setTimeout(function () {
      mass.resizeGrid('#product_module{{section.id}}',{{section.settings.listing_rows}});
    }, 300);

  });
</script>
{% endif %}