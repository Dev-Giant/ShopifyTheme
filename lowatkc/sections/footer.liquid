<!--Footer Start-->
{% include section.settings.footer_layout %}
<!--End of Footer-->
{% schema %}
{
   "name": "Footer",
   "class": "section-footer",
   "settings": [
      {
         "type": "select",
         "id": "footer_layout",
         "label": "Select header layout",
         "options": [
            {
               "value": "footer-1",
               "label": "Design 1"
            },
			{
               "value": "footer-2",
               "label": "Design 2"
            },
			{
               "value": "footer-3",
               "label": "Design 3"
            }
         ]
      },
 	  {
         "type": "header",
         "content": "Contact information"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Logo Image"
      },
      {
         "type": "checkbox",
         "id": "footer_content_enable",
         "label": "Show footer contact info"
      },
      {
         "type": "textarea",
         "id": "footer_about_us",
         "label": "Contact About Us"
      },
      {
         "type": "text",
         "id": "footer_address",
         "label": "Contact Address"
      },
	  {
         "type": "text",
         "id": "footer_phone",
         "label": "Contact Phone"
      },
      {
         "type": "text",
         "id": "footer_email",
         "label": "Contact Email"
      },
      {
         "type": "textarea",
         "id": "footer_open_time",
         "label": "Custom Text Field"
      },
      {
         "type": "header",
         "content": "Footer Menu Widgets"
      },
      {
         "type": "link_list",
         "id": "footer_menu_1",
         "label": "Menu 1"
      },
	  {
         "type": "link_list",
         "id": "footer_menu_2",
         "label": "Menu 2"
      },
	  {
         "type": "link_list",
         "id": "footer_menu_3",
         "label": "Menu 3",
         "info": "Used in Design 2"
      },
	  {
         "type": "header",
         "content": "Footer Blog- For Design 1"
      },
      {
        "type": "text",
        "id": "blog_heading",
        "label": "Heading",
        "default": "FROM OUR BLOG"
      },
      {
        "id": "footer_blog",
        "type": "blog",
        "label": "Blog"
      },
      {
         "type": "checkbox",
         "id": "footer_social_enable",
         "label": "Show social media icons",
         "info": "Add accounts in Social media section"
      },
      {
        "type": "image_picker",
        "id": "payment_image",
        "label": "Payment Image",
        "info": "Add this image incase to show icons bar"
      },
      {
         "type": "header",
         "content": "Bottom Footer"
      },
      {
        "type": "textarea",
        "id": "footer_content_text",
        "label": "Contact text",
        "info": "Use basic HTML to format text"
      }
   ]
}

{% endschema %}

