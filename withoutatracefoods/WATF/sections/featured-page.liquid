{% for block in section.blocks %}
<a href="{{block.settings.link}}"
class="recipes featured-page-item"
style="background-image: url({{block.settings.image | img_url: '500x' }});"
>
  <div class="base-button white-button">{{block.settings.label}}</div>
</a>
{% endfor %}


{% schema %}
  {
    "class": "featured-page-section",
    "max_blocks": 20,
    "blocks": [
      {
        "type": "linked_page",
        "name": "Page",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Label"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "600 x 600px recommended"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Page",
        "category": "layout",
        "blocks": [
          {
            "type": "linked_page"
          },
          {
            "type": "linked_page"
          },
          {
            "type": "linked_page"
          }
        ]
      }
    ]
  }
{% endschema %}
