{% assign object = section.settings %}
  <div class="image-with-text flex-container">
    <div class="image_column">
        {% render 'image-element',
                image: object.image,
                alt: image.alt
        %}
    </div>

    <div class="content_column">
      <h2>{{ object.title }}</h2>
      {{ object.text }}
      <a href="{{ object.button_link }}" class="base-button pink-button">
        {{ object.button_label}}
      </a>
    </div>
</div>


{% schema %}
{
  "name": "Variety Box",
  "class": "variety-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1024 x 1024px recommended"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Variety Pack Subscription Box"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Your favorite allergen-free snacks, delivered to your door.  Snack time has become easy-peasy.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "SHOP NOW"
    }
  ]
}
{% endschema %}
